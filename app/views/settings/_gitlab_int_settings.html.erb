<p>
  <%= label_tag 'settings_gitlab_url', "Gitlab Url" %>
  <%= text_field_tag 'settings[gitlab_url]', settings['gitlab_url'] %>
  <br/>
  <%= label_tag 'settings_gitlab_bot', "Bot token" %>
  <%= text_field_tag 'settings[gitlab_bot]', settings['gitlab_bot'] %>
  <br/>
  <%= label_tag 'settings[gitlab_members_sync]', "Project members synchronization" %>
  <%= check_box_tag 'settings[gitlab_members_sync]', 'enabled', (settings['gitlab_members_sync'] == 'enabled') %><br/>
  <%= label_tag 'settings_gitlab_autoremove', "Autoremove repository" %>
  <%= check_box_tag 'settings[gitlab_autoremove]', 'enabled', (settings['gitlab_autoremove'] == 'enabled') %><br/>
  <% Role.select("id, name").each do |role| %>
    <%= label_tag "settings[gitlab_role][#{role.id}]", role[:name] %>
    <%= select_tag "settings[gitlab_role][#{role.id}]", options_for_select([["Reporter", 20], ["Developer", 30], ["Manager", 40], ["Owner", 50]], (settings['gitlab_role'] ? settings['gitlab_role']["#{role.id}"] : "20")) %><br/>
  <% end %>
</p>
